# ============================================
# GetDocuFlight – Environment Variables Template
# Architecture v2.0
# Copy this file to .env and fill in the values
# ============================================

# ---------- PostgreSQL (Docker) ----------
POSTGRES_USER=getdocuflight
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=getdocuflight

# ---------- Database URL ----------
DATABASE_URL=postgresql://getdocuflight:your_secure_password_here@postgres:5432/getdocuflight

# ---------- Redis ----------
REDIS_URL=redis://redis:6379

# ---------- MinIO (Encrypted Document Storage) ----------
MINIO_ROOT_USER=your_minio_user
MINIO_ROOT_PASSWORD=your_minio_password_min_8_chars
MINIO_BUCKET=getdocuflight-documents

# ---------- ClamAV ----------
CLAMAV_HOST=clamav
CLAMAV_PORT=3310

# ---------- Encryption (AES-256) ----------
# MUST be exactly 32 characters for AES-256
MASTER_ENCRYPTION_KEY=generate_with_openssl_rand_hex_16

# ---------- Auth.js (NextAuth v5) ----------
NEXTAUTH_SECRET=generate_with_openssl_rand_base64_32
NEXTAUTH_URL=http://localhost:3000

# ---------- OpenAI (GPT-4o Vision) ----------
OPENAI_API_KEY=sk-your-openai-api-key

# ---------- DompetX Payment ----------
DOMPETX_API_KEY=your_dompetx_api_key
DOMPETX_WEBHOOK_SECRET=your_dompetx_webhook_secret
DOMPETX_BASE_URL=https://sandbox.dompetx.com/api/v1

# ---------- Resend Email ----------
RESEND_API_KEY=re_your_resend_api_key

# ---------- Exchange Rate ----------
FREECURRENCY_API_KEY=your_freecurrencyapi_key

# ---------- Notifications (Sprint 3) ----------
# SMTP Email (Nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=noreply@getdocuflight.com

# Telegram Bot (get from @BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# WhatsApp Business API (optional — wa.me deeplinks without this)
WHATSAPP_API_TOKEN=your_whatsapp_api_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id

# ---------- App ----------
NEXT_PUBLIC_APP_URL=http://localhost:80
