// GetDocuFlight – Prisma Schema
// Architecture v2.0: Auth.js + Prediction + Order + Document + EncryptionKey + AuditLog

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// Enums (Architecture v2.0 §3)
// ============================================

enum RiskLevel {
  LOW
  MEDIUM
  HIGH
}

enum OrderStatus {
  PENDING
  WAITING_PAYMENT
  PAID
  COMPLETED
  FAILED
  EXPIRED
}

enum ProductType {
  AI_PREDICTION
  DUMMY_FLIGHT
  DUMMY_BUNDLE
}

enum PaymentGateway {
  DOMPETX
  STRIPE
  POLAR
}

enum DocumentType {
  BANK_STATEMENT
  EMPLOYMENT_LETTER
  SALARY_SLIP
  PASSPORT_STAMPS
}

enum DocumentStatus {
  PROCESSING
  ANALYZED
  DELETED
}

enum BookingStatus {
  DRAFT
  PENDING_PAYMENT
  PAID
  PROCESSING
  DELIVERED
  COMPLETED
  CANCELLED
}

enum TripType {
  ONE_WAY
  ROUND_TRIP
}

enum NotifChannel {
  EMAIL
  WHATSAPP
  TELEGRAM
}

enum BookingSource {
  WEB_FORM
  CHATBOT
}

// ============================================
// Auth.js Models (NextAuth v5 Prisma Adapter)
// ============================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          String    @default("USER") // USER | ADMIN

  accounts       Account[]
  sessions       Session[]
  predictions    Prediction[]
  orders         Order[]
  documents      Document[]
  encryptionKeys EncryptionKey[]
  auditLogs      AuditLog[]
  bookings       Booking[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  freeToolsUsage   FreeToolsUsage[]
  savedItineraries SavedItinerary[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String

  refresh_token String? @db.Text
  access_token  String? @db.Text
  expires_at    Int?
  token_type    String?
  scope         String?
  id_token      String? @db.Text
  session_state String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================
// Business Models (Architecture v2.0 §3)
// ============================================

model Prediction {
  id                    String     @id @default(cuid())
  userId                String?
  fromCountry           String
  toCountry             String
  inputData             Json
  inputHash             String
  approvalScore         Int
  approvalScoreWithDocs Int?
  riskLevel             RiskLevel
  teaser                String     @db.Text
  recommendation        String     @db.Text
  recommendationSummary Json
  factors               Json
  strategicActionPlan   Json?
  benchmarks            Json?
  auditedDocuments      Json?      // Stores the results of the Smart Document Auditor
  hasDocumentAnalysis   Boolean    @default(false)
  isPaid                Boolean    @default(false)
  orderId               String?
  uploadWindowExpiresAt DateTime?

  user      User?      @relation(fields: [userId], references: [id], onDelete: SetNull)
  order     Order?     @relation(fields: [orderId], references: [id], onDelete: SetNull)
  documents Document[]

  createdAt DateTime @default(now())

  @@index([inputHash])
}

model Order {
  id             String         @id @default(cuid())
  userId         String?
  productType    ProductType
  amountUSD      Float
  amountIDR      Float
  exchangeRate   Float
  currency       String         @default("IDR")
  status         OrderStatus    @default(PENDING)
  paymentGateway PaymentGateway
  paymentMethod  String?
  paymentRef     String?
  productId      String?

  user        User?        @relation(fields: [userId], references: [id], onDelete: SetNull)
  predictions Prediction[]
  bookings    Booking[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  paidAt    DateTime?
}

// ============================================
// Booking Models (Sprint 3 — Integrated Booking Flow)
// ============================================

model Booking {
  id              String        @id @default(cuid())
  userId          String?
  status          BookingStatus @default(DRAFT)

  // Product Selection
  productType     ProductType   @default(DUMMY_FLIGHT)

  // Step 1: Flight Info
  departureCity   String
  arrivalCity     String
  departureDate   DateTime
  returnDate      DateTime?
  tripType        TripType      @default(ONE_WAY)
  passengerCount  Int           @default(1)

  // Step 2: Hotel Info (conditional — only for FLIGHT_HOTEL_BUNDLE)
  hotelCity       String?
  hotelCheckIn    DateTime?
  hotelCheckOut   DateTime?

  // Contact
  contactName     String?
  contactEmail    String?
  contactWhatsApp String?
  contactTelegram String?
  preferredNotif  NotifChannel  @default(EMAIL)

  // Payment — dynamic pricing: $10 flight / $20 bundle
  orderId         String?
  amountUSD       Float?
  amountIDR       Float?

  // Source
  source          BookingSource @default(WEB_FORM)

  user       User?              @relation(fields: [userId], references: [id], onDelete: SetNull)
  order      Order?             @relation(fields: [orderId], references: [id])
  passengers BookingPassenger[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model BookingPassenger {
  id          String    @id @default(cuid())
  bookingId   String
  fullName    String
  nationality String
  passportNo  String?
  salutation  String?   // Mr / Ms / Mrs
  dateOfBirth DateTime?

  booking Booking @relation(fields: [bookingId], references: [id], onDelete: Cascade)
}

// ============================================
// Document Security Models (Architecture v2.0 §3, §6)
// ============================================

model Document {
  id              String         @id @default(cuid())
  userId          String
  predictionId    String
  fileType        DocumentType
  storagePath     String
  mimeType        String?
  encryptionKeyId String?
  status          DocumentStatus @default(PROCESSING)
  scheduledDeleteAt DateTime
  deletedAt       DateTime?

  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  prediction    Prediction     @relation(fields: [predictionId], references: [id], onDelete: Cascade)
  encryptionKey EncryptionKey?

  createdAt DateTime @default(now())
}

model EncryptionKey {
  id           String    @id @default(cuid())
  userId       String
  documentId   String    @unique
  encryptedKey String    @db.Text
  deletedAt    DateTime?

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  document Document @relation(fields: [documentId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}

model AuditLog {
  id        String   @id @default(cuid())
  action    String
  fileId    String?
  userId    String
  purpose   String   @default("visa_prediction_reanalysis")
  ipAddress String
  timestamp DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// ============================================
// Live Chat Models
// ============================================

model ChatConversation {
  id          String   @id @default(cuid())
  visitorId   String
  visitorName String?
  status      String   @default("OPEN")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  messages    ChatMessage[]
}

model ChatMessage {
  id             String           @id @default(cuid())
  conversationId String
  conversation   ChatConversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  sender         String           // "visitor" or "admin"
  content        String
  createdAt      DateTime         @default(now())
}

// ============================================
// Free Tool Models (Sprint 4 — Lead Gen & SEO)
// ============================================

model FreeToolsUsage {
  id        String   @id @default(cuid())
  userId    String?
  toolType  String   // "VISA_CHECKER" | "ITINERARY"
  email     String?  // Optional email for lead generation
  ipAddress String
  params    Json     // Store search parameters
  createdAt DateTime @default(now())

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)
}

model SavedItinerary {
  id          String   @id @default(cuid())
  userId      String?
  title       String
  fromCountry String
  toCountry   String
  duration    Int      // in days
  content     Json     // The generated itinerary data
  isPublic    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)
}
